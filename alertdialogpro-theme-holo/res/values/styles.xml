<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Holo" parent="android:Widget" />

    <style name="Widget.Holo.ButtonBar">
        <!-- Use own attrs -->
        <item name="llDivider">?attr/adpButtonBarDividerVertical</item>
        <item name="llShowDividers">middle</item>
        <item name="llDividerPadding">0dip</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Holo.Button">
        <item name="android:background">@drawable/item_background_holo_dark</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>

    <style name="Widget.Holo.Button.Light">
        <item name="android:background">@drawable/item_background_holo_light</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Holo.ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">?attr/adpListItemBackground</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="DialogWindowTitle.Holo">
        <item name="android:textAppearance">@style/TextAppearanceTitle.Holo</item>
    </style>

    <style name="DialogWindowTitle.Holo.Light">
        <item name="android:textAppearance">@style/TextAppearanceTitle.Holo</item>
    </style>

    <style name="TextAppearanceTitle.Holo" parent="android:TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <style name="AlertDialogPro" />

    <style name="AlertDialogPro.Holo">
        <item name="adpLayout">@layout/alert_dialog_holo</item>
        <item name="adpListLayout">@layout/select_dialog_holo</item>
        <item name="adpListItemLayout">@layout/select_dialog_item_holo</item>
        <item name="adpMultiChoiceItemLayout">@layout/select_dialog_multichoice_holo</item>
        <item name="adpSingleChoiceItemLayout">@layout/select_dialog_singlechoice_holo</item>
    </style>

    <style name="AlertDialogPro.Holo.Light" />
</resources>
